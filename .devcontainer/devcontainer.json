{
    "name": "Rust Template",
    "image": "mcr.microsoft.com/devcontainers/rust:latest",
    "customizations": {
        "vscode": {
            "settings": {
                "[markdown]": {
                    "editor.rulers": [100],
                    "editor.wordWrap": "wordWrapColumn",
                    "editor.wordWrapColumn": 100
                },
                "files.watcherExclude": {
                    "**/target/**": true
                }
            }
        }
    }
}
