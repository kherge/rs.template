{
    "name": "Rust Template",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "serayuzgur.crates",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb"
            ],
            "settings": {
                "[markdown]": {
                    "editor.rulers": [100],
                    "editor.wordWrap": "wordWrapColumn",
                    "editor.wordWrapColumn": 100
                },
                "files.watcherExclude": {
                    "**/target/**": true
                }
            }
        }
    }
}
