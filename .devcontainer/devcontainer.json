{
    "name": "Rust Template",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "davidanson.vscode-markdownlint",
                "yzhang.markdown-all-in-one"
            ],
            "settings": {
                "[markdown]": {
                    "editor.rulers": [100],
                    "editor.wordWrap": "wordWrapColumn",
                    "editor.wordWrapColumn": 100
                },
                "files.watcherExclude": {
                    "**/target/**": true
                }
            }
        }
    },
    "postCreateCommand": "sh /usr/local/post-create.sh"
}
